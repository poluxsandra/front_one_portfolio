{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
      "useLiteralKeys": "off"
      },
      "suspicious": {
      "noDoubleEquals": "off"
      }
    }
  },
  "formatter": {
    "indentWidth": 4
  },
  "javascript": {
    "formatter": {
        "semicolons": "asNeeded",
        "indentWidth": 2
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  }
}
